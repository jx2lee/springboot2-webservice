{{>layout/header}}

<h1>Register Post</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title"> Subject </label>
                <input type="text" class="form-control" id="title" placeholder="Please enter a title">
            </div>
            <div class="form-group">
                <label for="author"> Author </label>
                <input type="text" class="form-control" id="author" placeholder="Please enter a author">
            </div>
            <div class="form-group">
                <label for="content"> Content </label>
                <textarea class="form-control" id="content" placeholder="Please enter a content"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">Cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">Registration</button>
    </div>
</div>

{{>layout/footer}}